{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Up Dev Infra",
      "command": "docker compose up",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Clean Dev Infra",
      "command": "docker compose down -v",
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "ReScript Build",
      "command": "yarn workspace api rescript build -w",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Prisma Studio",
      "command": "yarn workspace api prisma studio",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "GraphQL Codegen",
      "command": "yarn workspace api graphql-codegen -w",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Start API Server",
      "command": "yarn workspace api dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Start Dev",
      "dependsOn": [
        "ReScript Build",
        "GraphQL Codegen",
        "Start API Server"
      ]
    }
  ]
}
