{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Up Dev Infra",
      "command": "docker compose up",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "label": "Clean Dev Infra",
      "command": "docker compose down -v",
      "presentation": {
        "reveal": "silent",
        "panel": "new"
      }
    },
  ]
}
